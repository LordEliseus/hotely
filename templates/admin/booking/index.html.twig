{% extends '/admin/base.html.twig' %}

{% block title %}Administration des réservations{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h3 class="my-5">Administration des réservations</h3>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Visiteur</th>
                    <th>Annonce</th>
                    <th>Montant</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for booking in pagination.data %}
                <tr>
                    <td>{{ booking.id }}</td>
                    <td>{{ booking.createdAt | date('d/m/Y H:i') }}</td>
                    <td>{{ booking.booker.fullName }}</td>
                    <td>{{ booking.ad.title }}</td>
                    <td>{{ booking.amount | number_format(1,',',' ') }} F CFA</td>
                    <td>
                        <a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-primary"><i class="fa fa-pencil"></i></a>
                        <a href="{{ path('admin_booking_delete',{'id': booking.id}) }}" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ pagination.display }}
    </div>
{% endblock %}
