{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid" style="margin-top:15px; ">
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{ stats.users }} Utilisateurs</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{ stats.ads }} Annonces</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-warning text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{ stats.bookings }} Réservations</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-success text-white mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fa fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.comments }} Avis</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success">
                    <h4 class="alert-heading"><i class="fa fa-arrow-up"></i>&nbsp;Les annonces populaires</h4>
                    <table class="table table-hover text-white">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Annonce</th>
                            <th>Propriétaire</th>
                            <th>Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ad in bestAds  %}
                            <tr>
                                <td>{{ ad.id }}</td>
                                <td>{{ ad.title }}</td>
                                <td>{{ ad.firstName }} {{ ad.lastName }}</td>
                                <td><span class="badge badge-primary">{{ ad.note | number_format(1, ',', ' ') }}</span></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col">
                <div class="alert alert-danger">
                    <h4 class="alert-heading"><i class="fa fa-arrow-down"></i>&nbsp;Les annonces moins populaires</h4>
                    <table class="table table-hover text-white">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Annonce</th>
                            <th>Propriétaire</th>
                            <th>Moyenne</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for ad in worstAds  %}
                            <tr>
                                <td>{{ ad.id }}</td>
                                <td>{{ ad.title }}</td>
                                <td>{{ ad.firstName }} {{ ad.lastName }}</td>
                                <td><span class="badge badge-warning">{{ ad.note | number_format(1, ',', ' ') }}</span></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
